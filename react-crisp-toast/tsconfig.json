{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@testing-library/jest-dom", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "__test__"]
}
